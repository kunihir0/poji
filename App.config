<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
    <runtime>
        <gcServer enabled="true"/> <!-- Better for multi-core systems -->
        <gcConcurrent enabled="true"/> <!-- Concurrent garbage collection -->
        <UseSmallInternalThreadStacks enabled="true" /> <!-- Reduces memory -->
    </runtime>
</configuration>